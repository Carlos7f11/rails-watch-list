<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background') %>)">
    <h1><%= @list.name %></h1>
  </div>
  <span class="movie-tag"><%= pluralize(@list.movies.size, "movie") %></span>
</div>

<div class="container mb-5">
  <span class="mb-0 mt-4 d-block"><small class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %><em></em></small></span>
  <div class="d-flex justify-content-between align-items-center my-4">
    <div>
      <button type="button" class="btn btn-success"><%= link_to "Add a movie", new_list_bookmark_path(@list), class: " text-decoration-none" %></button>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
  Launch demo modal
</button></button>
    </div>
    <%= link_to "Delete this list", list_path(@list), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"} %>
  </div>

  <div class="row my-2">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-12 col-sm-6 col-md-4 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "movie-img rounded-top" %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= bookmark.movie.title %></strong>
            <span class="text-muted mt-1">
            rating: <%= bookmark.movie.rating %><i class="fa-solid fa-star star-yellow"></i></span></strong>
            <small class="text-muted mt-2"><%= bookmark.movie.overview %></small>
            <div class="d-flex align-items-end justify-content-between mt-2">
              <div>
                <i class="fa fa-quote-left" aria-hidden="true"></i>
                <small><%= bookmark.comment %> - </small>
                <%= link_to "Delete", bookmark_path(bookmark), class: "text-decoration-none, text-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  </div>


  <hr class="my-4">
  <div class="row p-3">
    <div class="col-12">
      <h3>Reviews</h3>
      <% if @list.reviews.empty? %>
        <small><em class="text-muted">Be the first one to review</em></small>
      <% end %>
      <% @list.reviews.each do |review| %>
        <div>
          <% review.rating.times do %>
            <i class="fa-solid fa-star star-yellow"></i>

          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%= review.comment %></p>
        </div>
        <hr>
      <% end %>
    <div class="col-12 col-sm-8">
      <div class="big-white rounded p-3"></div>
      <h5>Add your review</h5>
        <%= simple_form_for [@list, @review] do |f| %>
          <%= f.input :comment, placeholder: "Add your review here" %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, label: false, input_html: { data: { controller: "star-rating" } } %>
          <%= f.submit class: "btn" %>
        <% end %>
    </div>


    </div>
  </div>



</div>

<%= render "bookmarks/modal", list: @list, bookmark: @bookmark %>
